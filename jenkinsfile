pipeline {
   agent any
   // triggers {
   //    pollSCM '* * * * *'
   // }
   stages{
      stage('Checkout') {
         steps{
            git url: 'https://github.com/joeren2010/aws_trav_globes.git', branch: 'master'
         }
      }
      stage("verify tooling") {
         steps{
            sh '''
               docker version               
               docker info
               docker-compose version
               curl --version
               jq --version
            '''
         }
      }   
      // stage("gitClone") {
      //    steps{
      //       echo 'hello world'
      //    }
      // }
      stage("build") {
         steps{
            echo 'building'
         }
      }
      stage("deploy") {
         steps{
            echo 'deploying'
         }
      }
      stage("release") {
         steps{
            echo 'releasing'
         }
      }
   }
}